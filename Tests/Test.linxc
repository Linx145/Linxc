#include <Linxc.h>
#include <stdlib.h>

struct StructA
{
    int integer;
    bool boolean;
    float floatingPoint;
    int *someMemory;

    CONSTRUCTOR(StructA, int i)
    {
        someMemory = (int*)malloc(sizeof(int));
        *someMemory = i;
        boolean = true;
        floatingPoint = 0.2f;
    }
    CONSTRUCTOR(StructA)
    {
        someMemory = nullptr;
        integer = 0;
        boolean = false;
        floatingPoint = 0.0f;
    }
    DESTRUCTOR(StructA)
    {
        if (someMemory != nullptr)
        {
            free(someMemory);
        }
    }

    void ManipulateData(int integerIncrement)
    {
        integer += integerIncrement;
        boolean = !boolean;
        floatingPoint += 1.5f;
    }
};