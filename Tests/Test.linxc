#include <Linxc.h>
#include <stdlib.h>

struct StructA
{
    int integer;
    bool boolean;
    static float floatingPoint;
    void (*functionPointer)(int);

    CONSTRUCTOR(StructA, int i)
    {
        integer = i;
        boolean = true;
        floatingPoint = 0.2f;
    }
    CONSTRUCTOR(StructA)
    {
        integer = 0;
        boolean = false;
        floatingPoint = 0.0f;
    }
    DESTRUCTOR(StructA)
    {
    }

    void ManipulateData(int integerIncrement)
    {
        integer += integerIncrement;
        boolean = !boolean;
        floatingPoint += 1.5f;
    }
};