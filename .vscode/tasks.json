    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linxcc (MSVC)",
            "type": "shell",
            "command": "msbuild",
            "args": ["${workspaceFolder}/src/Linxcc.vcxproj", "/p:configuration='Debug Windows'", "/p:platform=x64"],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}